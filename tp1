//punto A - Utilizando la sentencia While
public class While  {
    
    public static void main(String[] args) {
        
        System.out.println("Numeros del 1 al 100: (Usando While)");
        int i=1;
        while(i<=100) {
                System.out.println(i);
                i++;}
        
        
    }
    
}

// punto B - Utlizando la sentencia For
public class For  {
    
    public static void main(String[] args) {
        
        System.out.println("Numeros del 1 al 100: (usando For)");
        int i;
        for(i=1;i<=100;i++) 
            System.out.println(i);
    }        
}  

//punto C - Utilizandoo la sentencia Do While
public class  Dowhile {
    
    public static void main(String[] args) { 
    int i = 1;
        System.out.println("Numeros del 1 al 100: (usando Do While)");
        do{ 
                System.out.println(i);
                i++;
        }while(i<=100);
    }        
}

// punto D - Utlizando la sentencia For con el resultado en doble
public class For {
    
    public static void main (String[] args) {
        
        System.out.println("Numeros del 1 al 100: (usando For)");
        int i;
        for(i=1;i<=100;i++) 
            System.out.println(i*2);
    }        
}  
